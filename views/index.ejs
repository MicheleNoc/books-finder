<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ricerca Libri ðŸ“š </title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>Ricerca Libri ðŸ“š</h1>
    <form class="search-form" action="/search" method="POST">
      <input type="text" name="title" placeholder="Inserisci il titolo del libro">
      <input type="text" name="author" placeholder="Inserisci l'autore del libro">
      <select name="language">
        <option value="">Seleziona il linguaggio</option>
        <option value="eng">Inglese</option>
        <option value="ita">Italiano</option>
        <option value="fra">Francese</option>
        <option value="spa">Spagnolo</option>
        <option value="deu">Tedesco</option>
        <!-- Aggiungi altre lingue qui -->
      </select>
      <button type="submit">Cerca</button>
    </form>
    <% if (error) { %>
      <p><%= error %></p>
    <% } %>
    <% if (books) { %>
      <div class="cards">
        <% books.forEach(book => { %>
          <div class="card">
            <h3><%= book.title %></h3>
            <p>di <%= book.author_name ? book.author_name.join(', ') : 'Autore sconosciuto' %></p>
            <% if (book.first_publish_year) { %>
              <p class="year">Pubblicato nel <%= book.first_publish_year %></p>
            <% } %>
            <% if (book.publisher) { %>
              <p class="publisher">Casa Editrice: <%= book.publisher.join(', ') %></p>
            <% } %>
            <p>Languages: 
              <ul>
                <% if (book.language) { %>
                  <% book.language.forEach(function(language) { %>
                    <%= language %>
                  <% }); %>
                <% } else { %>
                  <li>Unknown</li>
                <% } %>
              </ul>
            </p>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>

